{
    "manifest_version": 3,
    "name": "Super-Bot Eyes",
    "version": "1.0",
    "description": "Sends browser activity to Super-Bot for memory context.",
    "permissions": [
        "tabs",
        "history",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:8000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}